black-border = 1px solid black
height = 100px

body
	margin 0
	padding 0

*
	box-sizing border-box

ul
	margin 0px

.day
	&-row
		position relative
		border black-border
	&-header
		display flex
		justify-content center
		align-items center
		position absolute
		top 0
		bottom 0
		padding 10px
		width 100px
		float left
	&-contents
		height auto
		min-height 100px
		border-left black-border
		margin-left 100px
		padding 10px
		padding-bottom 38px
		&-events
			.entry-form
				.desc
					width 70%
					
.activeRow
	padding-bottom 10px